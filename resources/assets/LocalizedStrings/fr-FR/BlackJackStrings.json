{
  "smartling": {
    "translate_paths": [
      "*/translation"
    ],
    "variants_enabled": true,
    "translate_mode": "custom",
    "placeholder_format_custom": [
      "%%[^%]+?%%",
      "%[^%]+?%",
      "##[^#]+?##",
      "__[^_]+?__",
      "[$]\\{[^\\}\\{]+?\\}",
      "\\{\\{[^\\}\\{]+?\\}\\}",
      "(?<!\\{)\\{[^\\}\\{]+?\\}(?!\\})"
    ],
    "source_key_paths": [
      "/{*}"
    ]
  }
}
